generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model kategori {
  id          Int          @id @default(autoincrement())
  type        KategoriType @default(GREEN_BEAN)
  varietas    Varietas     @default(ARABICA)
  process     Process      @default(NATURAL)
  roast_level RoastLevel   @default(NONE)
  grind_size  GrindSize    @default(NONE)
  produk      produk?
}

model user {
  id             Int         @id @default(autoincrement())
  nama           String
  email          String      @unique
  password       String
  alamat         String
  no_hp          String      @unique
  role           Role        @default(USER)
  tanggal_dibuat DateTime    @default(now())
  tanggal_diubah DateTime    @default(now())
  keranjang_id   Int?
  transaksi      transaksi[]
  keranjang      keranjang[]
}

model produk {
  id             Int         @id @default(autoincrement())
  nama           String
  harga          Int
  stok           Int
  deskripsi      String
  kategori_id    Int         @unique
  tanggal_dibuat DateTime    @default(now())
  tanggal_diubah DateTime    @default(now())
  foto           String
  kategori       kategori    @relation(fields: [kategori_id], references: [id])
  keranjang      keranjang[]
  transaksi      transaksi[]
}

model keranjang {
  id             Int      @id @default(autoincrement())
  user_id        Int
  tanggal_dibuat DateTime @default(now())
  tanggal_diubah DateTime @default(now())
  produk_id      Int
  qty            Int
  total          Int      @default(0)
  produk         produk   @relation(fields: [produk_id], references: [id])
  user           user     @relation(fields: [user_id], references: [id])
}

model transaksi {
  id                 Int           @id @default(autoincrement())
  user_id            Int
  produk_id          Int
  tanggal_beli       DateTime      @default(now())
  tanggal_verifikasi DateTime?
  total              Int
  qty                Int
  verified           VerfikasiType @default(UNVERIFIED)
  user               user          @relation(fields: [user_id], references: [id])
  produk             produk        @relation(fields: [produk_id], references: [id])

  @@index([user_id], map: "transaksi_user_id_fkey")
  @@index([produk_id], map: "transaksi_produk_id_fkey")
}

enum Role {
  ADMIN
  USER
}

enum KategoriType {
  GREEN_BEAN
  ROAST_BEAN
  GROUND_COFFEE
}

enum Varietas {
  ARABICA
  ROBUSTA
  HOUSE_BLEND
}

enum Process {
  NATURAL
  FULL_WASH
  SEMI_WASH
  HONEY
  NATURAL_ANAEROB
}

enum RoastLevel {
  NONE
  LIGHT
  MEDIUM
  DARK
}

enum GrindSize {
  NONE
  FINE
  MEDIUM
  COARSE
}

enum VerfikasiType {
  UNVERIFIED
  VERIFIED
  REJECTED
}
